<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Action -->
    <record id="action_gestion_tache" model="ir.actions.act_window">
        <field name="name">Tâches</field>
        <field name="res_model">gestion.tache</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu principal -->
    <menuitem id="menu_gestion_taches_root" name="Gestion des tâches"/>

    <!-- Sous-menu -->
    <menuitem id="menu_gestion_taches"
              name="Tâches"
              parent="menu_gestion_taches_root"
              action="action_gestion_tache"/>

    <!-- Vue liste -->
    <record id="view_gestion_tache_tree" model="ir.ui.view">
        <field name="name">gestion.tache.tree</field>
        <field name="model">gestion.tache</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="responsable"/>
                <field name="date_debut"/>
                <field name="date_fin"/>
                <field name="priorite"/>
            </tree>
        </field>
    </record>

    <!-- Vue formulaire -->
    <record id="view_gestion_tache_form" model="ir.ui.view">
        <field name="name">gestion.tache.form</field>
        <field name="model">gestion.tache</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="responsable"/>
                        <field name="priorite"/>
                    </group>
                    <group>
                        <field name="date_debut"/>
                        <field name="date_fin"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
